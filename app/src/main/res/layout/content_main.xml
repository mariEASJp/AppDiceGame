<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_green_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dicegame.appdicegame.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's play!"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />


    <Imageview
        android:id="@+id/imgDie1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/die_1"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />

    <Imageview
        android:id="@+id/imgDie2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/die_1"
        app:layout_constraintLeft_toRightOf="@+id/imgDie1"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />

    <Imageview
        android:id="@+id/imgDie3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="parenRight|center"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/die_1"
        app:layout_constraintLeft_toRightOf="@+id/imgDie2"
        app:layout_constraintTop_toBottomOf="@+id/txtResult" />


    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:text="Score: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-3dp" />

</android.support.constraint.ConstraintLayout>
